<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="madara_server_checkbox"
        android:title="@string/pref_madara_server"
        android:summary="@string/pref_description_madara_server"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:dependency="madara_server_checkbox"
        android:key="madara_server_multicast_address_text"
        android:title="@string/pref_title_madara_server_multicast_address"
        android:defaultValue="@string/pref_title_madara_server_multicast_address_default"
        android:selectAllOnFocus="true"
        android:inputType="phone"
        android:capitalize="none"
        android:singleLine="true"
        android:maxLines="1" />

    <CheckBoxPreference
        android:key="http_server_checkbox"
        android:title="@string/pref_http_server"
        android:summary="@string/pref_description_http_server"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="tcp_server_checkbox"
        android:title="@string/pref_tcp_server"
        android:summary="@string/pref_description_tcp_server"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="udp_server_checkbox"
        android:title="@string/pref_udp_server"
        android:summary="@string/pref_description_udp_server"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="registry_server_checkbox"
        android:title="@string/pref_registry_server"
        android:summary="@string/pref_description_registry_server"
        android:defaultValue="false" />

</PreferenceScreen>
