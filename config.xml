<?xml version='1.0' encoding='utf-8'?>
<widget id="com.platypus.server" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Platypus Server</name>
    <description>
        A control server for autonomous robotic vehicles powered by mobile devices.
    </description>
    <author email="contact@senseplatypus.com" href="https://github.com/PlatypusLLC/">
        Platypus LLC
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="de.appplant.cordova.plugin.background-mode" spec="^0.6.4" />
    <plugin name="cordova-plugin-geolocation" spec="^1.0.0" />
</widget>
